{% extends model('component') %}

{% define config = {
    name: 'navigation-icon-list',
    tag: 'nav'
} %}

{% define data = {
    nodes: []
} %}

{% block body %}
    <ul class="menu menu--inline">
        {% for node in data.nodes %}
            {% embed atom('node') with {
                class: 'menu__item',
                config: {
                    tag: 'li'
                },
                data: {
                    node: node
                },
                embed: {
                    name: config.name
                }
            } only %}

                {% set icon = '' %}
                {% define classArray = data.node.cssClass | split(' ') %}
                {% if classArray | length > 0 %}
                    {% for tempIcon in classArray %}
                        {% set tempClassArray = tempIcon | split('--') %}
                        {% if tempClassArray | length > 1 %}
                            {% set icon = tempClassArray[1] %}
                        {% endif %}
                    {% endfor %}
                {% endif %}

                {% block url %}
                    <a class="link link--alt {{ data.node.cssClass }}" href="{{ data.node.url }}"
                       title="{{ data.node.title }}">
                        {% if icon %}
                            {% include atom('icon') with {
                                modifiers: ['big'],
                                data: {
                                    name: icon
                                }
                            } only %}
                        {% else %}
                            {{ data.node.title }}
                        {% endif %}
                    </a>
                {% endblock %}

                {% block externalUrl %}
                    <a class="link link--alt {{ data.node.cssClass }}" href="{{ data.node.url }}" target="_blank"
                       title="{{ data.node.title }}">
                        {% if icon %}
                            {% include atom('icon') with {
                                modifiers: ['big'],
                                data: {
                                    name: icon
                                }
                            } only %}
                        {% else %}
                            {{ data.node.title }}
                        {% endif %}
                    </a>
                {% endblock %}

                {% block other %}
                    {% if icon %}
                        {% include atom('icon') with {
                            modifiers: ['big'],
                            class: embed.name ~ '__icon ' ~ data.node.cssClass,
                            data: {
                                name: icon
                            }
                        } only %}
                    {% else %}
                        {{ data.node.title }}
                    {% endif %}
                {% endblock %}
            {% endembed %}
        {% endfor %}
    </ul>
{% endblock %}
