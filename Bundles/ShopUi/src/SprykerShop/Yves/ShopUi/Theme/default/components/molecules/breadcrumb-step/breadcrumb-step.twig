{% extends model('component') %}

{% define config = {
    name: 'breadcrumb-step',
    tag: 'li',
} %}

{% define data = {
    url: null,
    label: null,
    itemProp: null,
    withChevron: true,
    form: null,
    formName: '',
    tokenFieldName: '',
} %}

{% set isFormElement = data.form is not empty or data.formName is not empty %}
{% set isLink = data.url is not empty and not isFormElement %}

{% block body %}
    {%- if isLink -%}<a href="{{ data.url }}">{%- endif -%}
    {%- if data.itemProp -%}<span itemprop="{{-data.itemProp-}}">{%- endif -%}
    {%- if isFormElement -%}
        <form class="{{ config.name }}__form" name="{{ data.formName }}" method="post" action="{{ data.url }}">
            <input name="{{ data.tokenFieldName }}" type="hidden" value="{{ csrf_token(data.formName) }}">
            <button class="link">
    {%- endif -%}
            {{-data.label-}}
    {%- if isFormElement -%}
            </button>
        </form>
    {%- endif -%}
    {%- if data.itemProp -%}</span>{%- endif -%}
    {%- if isLink -%}</a>{%- endif -%}
    
    {% if data.withChevron %}
        {% include atom('icon') with {
            modifiers: ['small'],
            class: config.name ~ '__separator',
            data: {
                name: 'angle-double-right',
            },
        } only %}
    {% endif %}
{% endblock %}
