{% extends atom(data.type | default('checkbox')) %}

{% define config = {
    name: 'toggler-checkbox',
    tag: 'toggler-checkbox',
} %}

{% define data = {
    type: 'checkbox',
} %}

{# @deprecated property "target-selector" is deprecated: use "target-class-name" instead. #}
{% define attributes = {
    'target-selector': '',
    'target-class-name': '',
    'class-to-toggle': 'is-hidden',
    'add-class-when-checked': false,
} %}

{%- block class -%}
    {{parent()}} {{config.name}}--{{data.type}}
{%- endblock -%}

{%- block inputClass -%}
    {{parent()}} {{config.jsName}}__trigger
{%- endblock -%}
