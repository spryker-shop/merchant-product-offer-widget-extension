{% extends model('component') %}

{% define config = {
    name: 'thumbnail',
    tag: 'span',
} %}

{% block attributes %}{% endblock %}

{% block body %}
    {% set additionalImageClass = '' %}

    {% block image %}
        <img class="{{ config.name }}__image {{ additionalImageClass }}" {{ component.renderAttributes(attributes) }}>
    {% endblock %}
{% endblock %}
