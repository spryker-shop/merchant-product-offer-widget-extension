{% extends model('component') %}

{% define config = {
    name: 'clipboard-copy',
    tag: 'clipboard-copy',
} %}

{% define attributes = {
    'trigger-selector': required,
    'target-selector': required,
    'class-to-toggle': 'is-hidden',
} %}

{% block body %}
    <p class="{{ config.jsName }}__success-message text-success text-small is-hidden">{{ 'clipboard.copy.success' | trans }}</p>
    <p class="{{ config.jsName }}__error-message text-warning text-small is-hidden">{{ 'clipboard.copy.error' | trans }}</p>
{% endblock %}
