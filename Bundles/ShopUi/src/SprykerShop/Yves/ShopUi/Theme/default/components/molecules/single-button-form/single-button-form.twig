{% extends model('component') %}

{% define config = {
    name: 'single-button-form',
} %}

{% define data = {
    formAction: '',
    iconName: 'times',
    iconModifiers: ['smaller'],
    iconClasses: '',
    buttonText: '',
    buttonClass: config.name ~ '__button',
    csrfFieldName: '',
    csrfFieldValue: '',
} %}

{% block body %}
    <form method="POST" action="{{ data.formAction }}">
        {% block button %}
            <button class="{{ data.buttonClass }}">
                {% block icon %}
                    {% if data.iconName is not empty %}
                        {% include atom('icon') with {
                            modifiers: data.iconModifiers,
                            class: data.iconClasses,
                            data: {
                                name: data.iconName,
                            },
                        } only %}
                    {% endif %}
                {% endblock %}

                {% block text %}
                    {{ data.buttonText }}
                {% endblock %}
            </button>
        {% endblock %}

        {% block csrfField %}
            <input name="{{ data.csrfFieldName }}" type="hidden" value="{{ data.csrfFieldValue }}">
        {% endblock %}
    </form>
{% endblock %}
