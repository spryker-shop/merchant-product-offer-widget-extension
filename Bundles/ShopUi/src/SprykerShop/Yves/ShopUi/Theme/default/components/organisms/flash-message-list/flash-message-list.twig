{% extends model('component') %}

{% define config = {
    name: 'flash-message-list',
} %}

{% define data = {
    messages: [],
} %}

{% block body %}
    {% for message in messages %}
        {% include molecule('flash-message') with {
            data: {
                text: message.value | trans,
                action: message.type
            },
        } only %}
    {% endfor %}
{% endblock %}
