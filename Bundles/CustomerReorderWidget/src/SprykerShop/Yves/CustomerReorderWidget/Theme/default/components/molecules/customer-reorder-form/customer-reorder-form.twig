{% extends model('component') %}

{% define config = {
    name: 'customer-reorder-form',
    tag: 'customer-reorder-form'
} %}

{% define data = {
    idSalesOrder: required
} %}

{% block body %}
    <form action="{{ path('customer/order/reorder-items') }}" method="post">
        <input type="hidden" name="id" value="{{ data.idSalesOrder }}">

        {% block formContent %}{% endblock %}

        {% block formActions %}
            <div class="box">
                {% set wrapperClasses = 'grid grid--middle grid--right' %}

                {% block formActionsInner %}
                    <div class="{{ wrapperClasses }}">
                        {% block buttonColumn %}
                            <div class="form-field col col--sm-5 col--lg-3 spacing-right">
                                {% set buttonClasses = 'button button--expand ' ~ config.jsName ~ '__trigger' %}

                                {% block buttonColumnInner %}
                                    <button class="{{ buttonClasses }}" disabled>
                                        {{ 'customer.order.reorder_selected' | trans }}
                                    </button>
                                {% endblock %}
                            </div>
                        {% endblock %}

                        {% block linkColumn %}
                            <div class="form-field col col--sm-5 col--lg-3">
                                {% set reorderLinkClasses = 'button button--expand' %}

                                {% block linkColumnInner %}
                                    <a href="{{ path('customer/order/reorder', {'idSalesOrder': data.idSalesOrder}) }}" class="{{ reorderLinkClasses }}">
                                        {{ 'customer.order.reorder_all' | trans }}
                                    </a>
                                {% endblock %}
                            </div>
                        {% endblock %}
                    </div>
                {% endblock %}
            </div>
        {% endblock %}
    </form>
{% endblock %}
