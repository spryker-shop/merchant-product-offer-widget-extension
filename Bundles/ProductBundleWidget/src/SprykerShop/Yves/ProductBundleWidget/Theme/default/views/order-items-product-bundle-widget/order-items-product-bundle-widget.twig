{% extends template('widget') %}

{% define data = {
    productBundles: _widget.productBundles,
} %}

{% block body %}
    {% for productBundle in data.productBundles %}
        {% block bundle %}
            {% include molecule('ordered-product-bundle', 'ProductBundleWidget') with {
                class: 'grid',
                data: {
                    productBundle: productBundle,
                },
            } only %}
        {% endblock %}
    {% endfor %}
{% endblock %}
