{% extends template('widget') %}

{% define data = {
    productBundles: _widget.productBundles,
} %}

{% block body %}
    {% for productBundle in data.productBundles %}
        {% set bundleProduct = productBundle.bundleProduct %}
            {{ bundleProduct.sku }}
            {{ bundleProduct.name }}
            {{ bundleProduct.sumPrice }}
            {{ bundleProduct.metadata.image }}
            {{ bundleProduct.quantity }}
        {% for bundleItem in productBundle.bundleItems %}
            {{ bundleItem.sku }}
            {{ bundleItem.name }}
            {{ bundleItem.sumPrice }}
            {{ bundleItem.metadata.image }}
            {{ bundleItem.quantity }}
        {% endfor %}
    {% endfor %}
{% endblock %}
