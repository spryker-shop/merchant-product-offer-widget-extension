{% extends model('component') %}

{% define config = {
    name: 'filter-category',
} %}

{% block component %}
    {% if data.categories is not empty %}{{ parent() }}{% endif %}
{% endblock %}

{% block body %}
    {% if app.twig.function('prepareFilterCategories') %}
        {% include molecule('filter-category-prepared', 'CatalogPage') %}
    {% else %}
        {% include molecule('filter-category-bc', 'CatalogPage') %}
    {% endif %}
{% endblock %}
