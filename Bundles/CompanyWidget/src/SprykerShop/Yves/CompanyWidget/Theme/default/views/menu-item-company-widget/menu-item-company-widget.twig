{% extends template('widget') %}

{% define data = {
    companyName: _widget.companyName,
    isVisible: _widget.isVisible,
} %}

{% block body %}
    {% if data.isVisible %}
        <a href="{{ path('company/overview') }}" title="{{ data.companyName }}">{{ 'company.account.page-title' | trans }}</a>
    {% endif %}
{% endblock %}
