{% extends model('component') %}

{% define config = {
    name: 'overview-info',
} %}

{% define data = {
    company: required,
    defaultBillingAddress: required,
} %}

{% block body %}
    {% if data.company is not empty %}
        <span class="{{ config.name }}__title">{{ 'company.account.name' | trans }}:</span>
        <span class="{{ config.name }}__text"> {{ data.company.name }}</span><br>
    {% endif %}
    {% if data.defaultBillingAddress is not empty %}
        <span class="{{ config.name }}__title">{{ 'company.account.address' | trans }}:</span>
        {% set mainAddress = data.defaultBillingAddress %}
        {{ mainAddress.address1 }} {{ mainAddress.address2 }}, {{ mainAddress.zipCode }} {{ mainAddress.city }}, {{ ('countries.iso.' ~ mainAddress.iso2Code) | trans }}
    {% endif %}
{% endblock %}
