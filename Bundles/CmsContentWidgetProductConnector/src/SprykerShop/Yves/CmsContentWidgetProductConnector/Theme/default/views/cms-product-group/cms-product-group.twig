{% extends template('widget') %}

{% define data = {
    product: product | default,
    products: products | default([]),
    isUnavailableProductsDisplayed: isUnavailableProductsDisplayed | default(false),
} %}

{% block body %}
    <div class="grid grid--stretch">
        {% for product in data.products %}
            {% if data.isUnavailableProductsDisplayed or product.available %}
                {% widget 'CmsProductGroupWidget' args [product] only %}
                {% elsewidget 'ProductGroupWidgetPlugin' args [product] only %} {# @deprecated Use CmsProductGroupWidget instead. #}
                {% endwidget %}
            {% endif %}
        {% endfor %}
    </div>

    {% if data.product is not empty %}
        {% widget 'CmsProductGroupWidget' args [data.product] only %}
        {% elsewidget 'ProductGroupWidgetPlugin' args [data.product] only %} {# @deprecated Use CmsProductGroupWidget instead. #}
        {% endwidget %}
    {% endif %}
{% endblock %}
