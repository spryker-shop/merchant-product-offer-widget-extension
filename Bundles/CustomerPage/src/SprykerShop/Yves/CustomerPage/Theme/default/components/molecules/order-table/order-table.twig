{% extends model('component') %}

{% define config = {
    name: 'order-table',
} %}

{% define data = {
    orders: required,
    isOrderSearchEnabled: false,
    isOrderSearchOrderItemsVisible: true,
    orderSearchForm: null
} %}

{% block body %}
    <table class="table table--expand">
        {% if (data.orderSearchForm) %}
            {{ form_start(data.orderSearchForm) }}

            {{ form_row(data.orderSearchForm.searchGroup, {'label': 'customer.order_history.search_group.label' | trans}) }}
            {{ form_row(data.orderSearchForm.searchText) }}

            {{ form_row(data.orderSearchForm.dateFrom, {'label': 'customer.order_history.date_from.label' | trans}) }}
            {{ form_row(data.orderSearchForm.dateTo, {'label': 'customer.order_history.date_to.label' | trans}) }}

            <button type="submit" name="submit" class="button button--success">
                {{ 'customer.order_history.apply' | trans }}
            </button>
        {% endif %}

        <thead>
            <tr>
                <th>{{ 'customer.order.reference' | trans }}</th>
                <th>{{ 'customer.order.date' | trans }}</th>
                {% if data.isOrderSearchEnabled and data.isOrderSearchOrderItemsVisible %}
                    <th>{{ 'customer.order.number_of_items' | trans }}</th>
                {% endif %}
                <th>{{ 'customer.order.total' | trans }}</th>
                <th>{{ 'customer.table.actions' | trans }}</th>
            </tr>
        </thead>
        {% if (data.orderSearchForm) %}
            {{ form_end(data.orderSearchForm) }}
        {% endif %}
        <tbody>
            {% if data.orders is empty %}
                <tr>
                    <td colspan="100%">{{ 'customer.account.no_order' | trans }}</td>
                </tr>
            {% endif %}

            {% for order in data.orders %}
                <tr>
                    <td>{{ order.orderReference }}</td>
                    <td>{{ date(order.createdAt) | formatDateTime }}</td>
                    {% if data.isOrderSearchEnabled and data.isOrderSearchOrderItemsVisible %}
                        <td>{{ order.items.count }}</td>
                    {% endif %}
                    <td>{{ order.totals.grandTotal | default(0) | money(true, order.currencyIsoCode) }}</td>
                    <td>
                        <ul class="menu menu--inline">
                            <li class="menu__item">
                                <a href="{{ path('customer/order/details', {'id': order.idSalesOrder}) }}">
                                    {{ 'customer.order.view_order' | trans }}
                                </a>
                            </li>
                            {% if widgetExists('CustomerReorderWidgetPlugin') %}
                                <li class="menu__item">
                                    {{ widgetBlock('CustomerReorderWidgetPlugin', 'reorderAction', order) }} {# @deprecated Use molecule('customer-reorder-link', 'CustomerReorderWidget') instead. #}
                                </li>
                            {% else %}
                                {% include molecule('customer-reorder-link', 'CustomerReorderWidget') with {
                                    data: {
                                        idSalesOrder: order.idSalesOrder
                                    }
                                } only %}
                            {% endif %}
                        </ul>
                    </td>
                </tr>
                {% if data.isOrderSearchEnabled and data.isOrderSearchOrderItemsVisible %}
                    <tr>
                        <td colspan="100%">
                            {% include molecule('order-items-table', 'CustomerPage') with {
                                data: {
                                    items: order.items,
                                },
                            } only %}
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
