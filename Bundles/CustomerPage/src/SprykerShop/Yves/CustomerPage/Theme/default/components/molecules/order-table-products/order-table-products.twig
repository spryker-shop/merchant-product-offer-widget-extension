{% extends model('component') %}

{% define config = {
    name: 'order-table-products',
} %}

{% define data = {
    items: required,
} %}

{% block body %}
    {% for item in data.items %}
        {% embed molecule('product-item-list') with {
            data: {
                product: item,
            },
        } only %}
            {%- block extraClass %}{% endblock -%}

            {% block actions %}
                {{ data.product.quantity }}
            {% endblock -%}

            {% block actionsContainer %}{% endblock -%}
        {% endembed %}
    {% endfor %}
{% endblock %}
