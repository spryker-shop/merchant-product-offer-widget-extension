{% extends template('page-layout-main') %}

{% define data = {
    title: 'configurable_bundle_page.choose_bundle_to_configure' | trans,
    configurableBundleTemplates: _view.configurableBundleTemplates,
} %}

{% block breadcrumbs %}
    {% include molecule('breadcrumb') with {
        data: {
            steps: [{
                label: 'configurable_bundle_page.configurable_bundle_list' | trans,
                withChevron: false,
            }],
        },
    } only %}
{% endblock %}

