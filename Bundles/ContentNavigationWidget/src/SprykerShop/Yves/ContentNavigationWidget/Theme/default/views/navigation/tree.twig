{% extends template('widget') %}

{% define data = {
    navigation: navigation,
} %}

{% block body %}
    {% if data.navigation.isActive %}
        {% include molecule('navigation-multilevel') with {
            modifiers: ['content-item'],
            data: {
                nodes: data.navigation.nodes,
                menuInline: false,
                menuDropdown: false
            }
        } only %}
    {% endif %}
{% endblock %}
