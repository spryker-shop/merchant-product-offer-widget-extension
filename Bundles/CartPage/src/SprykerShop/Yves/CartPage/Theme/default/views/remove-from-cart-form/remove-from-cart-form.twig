    {{ form_start(data.form, {'action': path('cart/remove', {'sku': data.cartItem.sku, 'groupKey': data.cartItem.groupKey }), 'name': 'removeFromCartForm_' ~ data.cartItem.sku }) }}
        {% block embeddedData %}{% endblock %}
    {{ form_end(data.form) }}
{% endblock %}
