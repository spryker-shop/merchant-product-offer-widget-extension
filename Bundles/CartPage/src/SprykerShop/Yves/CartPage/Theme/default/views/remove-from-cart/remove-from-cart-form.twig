{% extends template('widget') %}

{% define data = {
    form: _widget.removeFromCartForm,
    cartItem: _widget.cartItem,
    formNamePostfix: _widget.cartItem,
} %}

{% block body %}
    {{ form_start(data.form, {
        'action': path('cart/remove', {'sku': data.cartItem.sku, 'groupKey': data.cartItem.groupKey }),
        'name': 'removeFromCartForm_' ~ data.cartItem.groupKey,
    }) }}
        {% block embeddedData %}{% endblock %}
        {{ form_row(data.form._token, {id: ''}) }}
    {{ form_end(data.form) }}
{% endblock %}
