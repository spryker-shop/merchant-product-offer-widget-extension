{
    "private": true,
    "name": "spryker-master-suite",
    "description": "Spryker Master Suite",
    "author": {
        "name": "Spryker Systems GmbH",
        "email": "info@spryker.com",
        "url": "https://spryker.com/"
    },
    "scripts": {
        "formatter:write": "npx prettier --config node_modules/@spryker/frontend-config.prettier/.prettierrc.json --write '**/*.(scss|css|less|js|ts|json|html)'",
        "formatter:check": "npx prettier --config node_modules/@spryker/frontend-config.prettier/.prettierrc.json --check '**/*.(scss|css|less|js|ts|json|html)'",
        "stylelint:write": "npx stylelint '**/*.scss' '!**/*PageExample/**/*.scss' --config node_modules/@spryker/frontend-config.stylelint/.stylelintrc --fix",
        "stylelint:check": "npx stylelint '**/*.scss' '!**/*PageExample/**/*.scss' --config node_modules/@spryker/frontend-config.stylelint/.stylelintrc",
        "tslint:write": "tslint -p tsconfig.json -c tslint.json --fix",
        "tslint:check": "tslint -p tsconfig.json -c tslint.json"
    },
    "engines": {
        "node": ">=12.0.0",
        "npm": ">=6.9.0"
    },
    "devDependencies": {
        "@spryker/frontend-config.prettier": "~0.0.2",
        "@spryker/frontend-config.stylelint": "~0.0.4",
        "@spryker/frontend-config.tslint": "~0.0.4",
        "prettier": "~2.0.5",
        "stylelint": "~13.8.0",
        "tslint": "~6.1.3"
    }
}
