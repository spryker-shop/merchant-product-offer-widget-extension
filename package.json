{
    "private": true,
    "name": "spryker-master-suite",
    "description": "Spryker Master Suite",
    "author": {
        "name": "Spryker Systems GmbH",
        "email": "info@spryker.com",
        "url": "https://spryker.com/"
    },
    "scripts": {
        "formatter": "npx prettier --config node_modules/@spryker/frontend-config.prettier/.prettierrc.json --check '**/*.(scss|css|less|js|ts|json|html)'",
        "formatter:fix": "npx prettier --config node_modules/@spryker/frontend-config.prettier/.prettierrc.json --write '**/*.(scss|css|less|js|ts|json|html)'",
        "stylelint": "npx stylelint '**/*.scss' '!**/*PageExample/**/*.scss' '!vendor/**' 'vendor/spryker/spryker-shop/**' --config node_modules/@spryker/frontend-config.stylelint/.stylelintrc",
        "stylelint:fix": "npx stylelint '**/*.scss' '!**/*PageExample/**/*.scss' '!vendor/**' 'vendor/spryker/spryker-shop/**' --config node_modules/@spryker/frontend-config.stylelint/.stylelintrc --fix",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "tslint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    },
    "engines": {
        "node": ">=12.0.0",
        "npm": ">=6.9.0"
    },
    "devDependencies": {
        "@spryker/frontend-config.prettier": "~0.0.2",
        "@spryker/frontend-config.stylelint": "~0.0.3",
        "@spryker/frontend-config.tslint": "~0.0.3",
        "prettier": "~2.0.5",
        "stylelint": "~13.8.0",
        "tslint": "~6.1.3",
        "typescript": "~3.8.3"
    }
}
